{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "allowImportExportEverywhere": true,
        "sourceType": "module"
    },
    "ignorePatterns": [
        "node_modules/",
        "dist/"
    ],
    "rules": {
        "object-curly-newline": [
            "error",
            {
                "ImportDeclaration": {
                    "consistent": true,
                    "multiline": true
                },
                "ObjectPattern": {
                    "consistent": true,
                    "multiline": true
                }
            }
        ],
        "max-classes-per-file": [
            "error",
            2
        ],
        "indent": [
            "error",
            2
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
